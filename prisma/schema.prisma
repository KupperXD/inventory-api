// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

model User {
  id                        Int     @id @default(autoincrement())
  email                     String  @unique
  name                      String
  password                  String
  currentHashedRefreshToken String?
}

model Employee {
  id    Int    @id @default(autoincrement())
  email String @unique
  name  String
}

model StoredFile {
  id            Int    @id @default(autoincrement())
  name          String
  original_name String
  mime          String
  size          BigInt
  path          String
}
